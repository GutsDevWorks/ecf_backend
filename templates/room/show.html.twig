{% extends 'base.html.twig' %}

{% block title %}Room
{% endblock %}

{% block body %}
	<!-- Titre de la page -->
	<h1>Room</h1>

	<!-- Tableau de détails d'une salle -->
	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ room.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ room.name }}</td>
			</tr>
			<tr>
				<th>Location</th>
				<td>{{ room.location }}</td>
			</tr>
			<tr>
				<th>Capacity</th>
				<td>{{ room.capacity }}</td>
			</tr>
			<tr>
				<th>Photos</th>
				<!-- Si la salle a une photo enregistrée, on l'affiche -->
				{% if room.photo %}
					<img src="{{ asset('room/img/' ~ room.photo) }}" alt="{{ room.name }}" width="200">
				{% else %}
					<!-- Sinon, message alternatif -->
					<em>Aucune photo</em>
				{% endif %}
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ room.description }}</td>
			</tr>
		</tbody>
	</table>

	<!-- Boutons d’action (centrés) -->
	<td style="border:1px solid #ccc; padding:8px; text-align:center;">
		<div style="display:flex; justify-content:center; gap:10px;">
			<!-- Bouton "Show" (ici redondant car on est déjà sur la page de détail) -->
			<a href="{{ path('app_room_show', {'id': room.id}) }}" style="display:inline-block; padding:6px 12px; background:#007bff; color:#fff; border-radius:3px; text-decoration:none;">
				Show
			</a>

			<!-- Bouton "Edit" pour modifier la salle -->
			<a href="{{ path('app_room_edit', {'id': room.id}) }}" style="display:inline-block; padding:6px 12px; background:#ffc107; color:#000; border-radius:3px; text-decoration:none;">
				Edit
			</a>
		</div>
	</td>

	<!-- Inclusion du formulaire de suppression (room/_delete_form.html.twig) -->
	{{ include('room/_delete_form.html.twig') }}
{% endblock %}
