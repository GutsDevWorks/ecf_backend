{% extends 'base.html.twig' %}

{% block title %}Options{% endblock %}

{% block body %}
    <!-- Titre de la page -->
    <h1>Options</h1>

    <!-- Tableau affichant les détails d'une option -->
    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <!-- Identifiant unique de l’option -->
                <td>{{ option.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <!-- Nom de l’option -->
                <td>{{ option.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <!-- Description détaillée de l’option -->
                <td>{{ option.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <!-- Catégorie ou type de l’option -->
                <td>{{ option.type }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Boutons d’action  -->
    <div style="border:1px solid #ccc; padding:8px; text-align:center;">
        <div style="display:flex; justify-content:center; gap:10px; flex-wrap:wrap;">
            <!-- Retour à la liste -->
            <a href="{{ path('app_options_index') }}"
               style="display:inline-block; padding:6px 12px; background:#6c757d; color:#fff; border-radius:3px; text-decoration:none; border:1px solid #6c757d;">
                Retour à la liste
            </a>

            <!-- Lien pour afficher cette option -->
            <a href="{{ path('app_options_show', {'id': option.id}) }}"
               style="display:inline-block; padding:6px 12px; background:#007bff; color:#fff; border-radius:3px; text-decoration:none; border:1px solid #007bff;">
                Afficher
            </a>

            <!-- Lien pour éditer cette option -->
            <a href="{{ path('app_options_edit', {'id': option.id}) }}"
               style="display:inline-block; padding:6px 12px; background:#ffc107; color:#000; border-radius:3px; text-decoration:none; border:1px solid #ffc107;">
                Modifier
            </a>
        </div>
    </div>

    <!-- Formulaire de suppression -->
    <div style="margin-top:10px; display:flex; justify-content:center;">
        <div style="display:inline-block;">
            {{ include('options/_delete_form.html.twig', {
                button_style: 'display:inline-block; padding:6px 12px; background:#dc3545; color:#fff; border-radius:3px; text-decoration:none; border:1px solid #dc3545; cursor:pointer;'
            }) }}
        </div>
    </div>
{% endblock %}
