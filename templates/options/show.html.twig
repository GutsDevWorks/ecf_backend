{% extends 'base.html.twig' %}

{% block title %}Options{% endblock %}

{% block body %}
    <!-- Titre de la page -->
    <h1>Options</h1>

    <!-- Tableau affichant les détails d'une option -->
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <!-- Identifiant unique de l’option -->
                <td>{{ option.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <!-- Nom de l’option -->
                <td>{{ option.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <!-- Description détaillée de l’option -->
                <td>{{ option.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <!-- Catégorie ou type de l’option -->
                <td>{{ option.type }}</td>
            </tr>
        </tbody>
    </table>

    <!-- Lien pour revenir à la liste des options -->
    <a href="{{ path('app_options_index') }}">back to list</a>

    <!-- Lien pour éditer cette option -->
    <a href="{{ path('app_options_edit', {'id': option.id}) }}">edit</a>

    <!-- Inclusion du formulaire de suppression -->
    {{ include('options/_delete_form.html.twig') }}
{% endblock %}
