{% extends 'base.html.twig' %}

{% block title %}Reservations index{% endblock %}

{% block body %}
    <h1>Reservations index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Créé</th>
                <th>Mis à jour</th>
                <th>Rappel envoyé à</th>
                <th>Validé</th>
                <th>Statut de réservation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.startAt ? reservation.startAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ reservation.endAt ? reservation.endAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ reservation.createdAt ? reservation.createdAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ reservation.updatedAt ? reservation.updatedAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ reservation.reminderSentAt ? reservation.reminderSentAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ reservation.validatedAt ? reservation.validatedAt|date('d-m-Y H:i') : '' }}</td>
                <td>{{ reservation.reservationStatus is same as(true) ? 'Validée' : (reservation.reservationStatus is same as(false) ? 'Refusée' : 'En attente') }}</td>
                <td>{{ reservation.userId.firstname }}</td>
                <td>
                    <a href="{{ path('app_reservations_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservations_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservations_new') }}">Créer un nouveau</a>

    <!-- Pagination -->
	<div class="d-flex">
		{% if page > 1 %}
			<a href="{{ path('app_reservations_index', {page: page - 1}) }}" class="btn btn-secondary"> Précédente</a>
		{% endif %}

		<span> {{ page }} | {{ maxPage }}</span>

		{% if page < maxPage %}
			<a href="{{ path('app_reservations_index', {page: page + 1}) }}" class="btn btn-secondary"> Suivante</a>
		{% endif %}
	</div>
{% endblock %}
